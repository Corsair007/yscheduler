<div id="alertMessageDiv" style="text-align: center;"></div>

<div class="col-xs-12">
	#set($notice = $request.getParameter("notice")) 
	#if($notice)
	#if($request.getParameter("success") == "false")
		<div id="alertContainer" class="container alert alert-danger">
	#else
		<div id="alertContainer" class="container alert alert-success">
	#end
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong>$notice</strong>
		</div>
		#end
		<div class="table-responsive">
			<table class="table table-striped table-bordered table-hover" id="taskListTable">
				<thead>
					<tr>
						<th>任务名</th>
						<th>创建人</th>
						<th>类型</th>
						<th>创建时间</th>
						<th>操作</th>
					</tr>
				</thead>
				<tbody id="adList">
					#foreach($task in $list)
					<tr>
						<td><b>$task.name</b></td>
						<td>$task.user.name</td>
						<td>$task.type</td>
						<td style="width: 200px">$dateFormatUtils.format($task.createTime,'yyyy年MM月dd日HH时mm分')</td>
						<td style="width: 300px"><a href="${rc.contextPath}/mytask/detail/$task.id"><span
								class="label label-success">&nbsp; 任务详情 </span></a> &nbsp;<a id="attempts" href="/mytask/instance?taskId=$task.id"><span
								class="label label-info">运行历史</span></a>&nbsp;
							<div class="btn-group">
								<button class="label label-warning" data-toggle="dropdown">
									操作<span class="caret"></span>
								</button>
								<ul class="dropdown-menu">
									<li><a href="javascript:;" onclick="app.openTriggerTaskModal($task.id)"><span class="label label-info">执行</span></a></li>
									<!--#if($task.status.id==1)	
									<li><a href="javascript:;" onclick="showConfirm($task.id,'$task.name','suspend','暂停')"><span
											class="label label-warning">暂停</span></a></li>
									#elseif($task.status.id==2)
									<li><a href="javascript:;" onclick="showConfirm($task.id,'$task.name','resume','恢复')"><span
											class="label label-success">恢复</span></a></li>
									#end-->
									<li><a href="javascript:;" onclick="showConfirm($task.id,'$task.name','delete','删除')"><span
											class="label label-danger">删除</span></a></li>
								</ul>
							</div></td>
					</tr>
					#end
				</tbody>
			</table>
		</div>
	</div>
	#screen("paginator.htm")