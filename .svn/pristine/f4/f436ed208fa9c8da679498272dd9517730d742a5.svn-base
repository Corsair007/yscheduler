#!/usr/bin/expect
cd /tmp/yscheduler
set WEB_HOST [lindex $argv 0]
set USER [lindex $argv 1]
set PASSWORD [lindex $argv 2]
set DATE [lindex $argv 3]

   #scp
   spawn scp deploy/target/yscheduler-web-0.0.2.zip $USER@${WEB_HOST}:/dianyi/
   expect "password:" {
      send "${PASSWORD}\r"
   }
   expect "*]*"
   #login
   spawn ssh $USER@$WEB_HOST
   expect "(yes/no)?" {
         send "yes\r"
         expect "password:" {
             send "$PASSWORD\r"
         }
   } "password:" {
         send "$PASSWORD\r"
   } 
   expect "*]*"
   #stop
   send "jetty.sh stop\r"
   expect "*]*"
   #backup,unzip
   send "mv /dianyi/webapps/ROOT /dianyi/backup/ROOT.${DATE}\r"
   expect "*]*"
   send "unzip -q /dianyi/yscheduler-web-0.0.2.zip -d /dianyi/webapps/\r"
   expect "*]*"
   #start
   send "jetty.sh start\r"
   expect "*]*"

send "exit\r"
expect eof
exit
