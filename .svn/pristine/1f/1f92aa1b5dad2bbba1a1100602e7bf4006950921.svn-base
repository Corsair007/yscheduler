package com.yeahmobi.yscheduler.model.type;

/**
 * 1初始，2运行中，3成功，4失败
 *
 * @author atell
 */
public enum InstanceStatus {

    INITED(1, "新建"), RUNNING(2, "运行中"), SUCCESS(3, "运行成功"), FAILED(4, "运行失败");

    private int    id;
    private String desc;

    InstanceStatus(int id, String desc) {
        this.id = id;
        this.desc = desc;
    }

    public int getId() {
        return this.id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getDesc() {
        return this.desc;
    }

    public void setDesc(String desc) {
        this.desc = desc;
    }

    public static InstanceStatus valueOf(int id) {
        switch (id) {
            case 1:
                return INITED;
            case 2:
                return RUNNING;
            case 3:
                return SUCCESS;
            case 4:
                return FAILED;
        }
        return null;
    }

    public boolean isCompleted() {
        return FAILED.equals(this) || SUCCESS.equals(this);
    }

}
