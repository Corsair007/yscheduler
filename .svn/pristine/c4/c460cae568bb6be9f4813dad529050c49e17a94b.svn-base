<div class="page-header">
	<h1>
		<a href="${rc.contextPath}/workflow/detail/$!{workflow.id}">$!{workflow.name}</a> <small> <i
			class="icon-double-angle-right"></i> 工作流调度详情
		</small>
	</h1>
</div>
<div id="alertMessageDiv" style="text-align: center;"></div>
<div class="col-xs-3">
	<div class="row">
		<div class="col-sm-4 infobox-container">
			<div class="infobox infobox-blue2  ">
				<div class="infobox-progress">
					<div class="easy-pie-chart percentage easyPieChart" data-percent="${successRate}" data-size="46"
						style="width: 46px; height: 46px; line-height: 46px;">
						<span class="percent">$successRate</span>%
						<canvas width="46" height="46"></canvas>
					</div>
				</div>

				<div class="infobox-data">
					<span class="infobox-text">成功率</span>
					<div class="infobox-content">已完成 ${totalRunCount} 次</div>
				</div>
			</div>
		</div>
	</div>
	<div class="space-6"></div>

</div>
<div class="col-xs-9">
	<div class="table-responsive" style="width: 90%; min-height: 400px">
		<table class="table table-striped table-bordered table-hover" id="instanceListTable">
			<thead>
				<tr>
					<th>调度时间</th>
					<th>开始时间</th>
					<th>结束时间</th>
					<th>状态</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody id="adList">
				#foreach($instance in $list)
				<tr>
					<td style="">#if(!$instance.scheduleTime)
						<span class="label label-sm label-info">手动执行</span>#else
						$!dateFormatUtils.format($instance.scheduleTime,'yyyy年MM月dd日HH时mm分') #end
					</td>
					<td>$!dateFormatUtils.format($instance.startTime,'yyyy年MM月dd日HH时mm分')</td>
					<td style="">#if($instance.status.isCompleted())
						$!dateFormatUtils.format($instance.endTime,'yyyy年MM月dd日HH时mm分') #end</td>
					<td>#if($instance.status.id==1) <span class="label label-sm">$instance.status.desc</span>
						#elseif($instance.status.id==10) <span class="label label-sm label-info arrowed-in">$instance.status.desc</span>
						#elseif($instance.status.id==20) <span class="label label-sm label-success">$instance.status.desc</span>
						#elseif($instance.status.id==30) <span class="label label-sm label-danger">$instance.status.desc</span>
						#elseif($instance.status.id==40) <span class="label label-sm label-warning">$instance.status.desc</span>#end
					</td>
					<td style=""><a href="${rc.contextPath}/workflow/instance/tasks?instanceId=$instance.id"><span
							class="label label-info">&nbsp; 运行详情 </span></a></td>
				</tr>
				#end
			</tbody>
		</table>
	</div>
	#screen("paginator.htm")
</div>
