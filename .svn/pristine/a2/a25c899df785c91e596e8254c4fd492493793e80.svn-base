<div class="page-header">
	<h1>
		<a href="${rc.contextPath}/task/detail/$!{task.id}">$!{task.name}</a> <small> <i
			class="icon-double-angle-right"></i> 任务调度详情
		</small>
	</h1>
</div>
<div id="alertMessageDiv" style="text-align: center;"></div>
<div class="col-xs-2">
	<div class="row">
		<div class="col-sm-4 infobox-container">
			<div class="infobox infobox-blue2  ">
				<div class="infobox-progress">
					<div class="easy-pie-chart percentage easyPieChart" data-percent="${successRate}" data-size="46"
						style="width: 46px; height: 46px; line-height: 46px;">
						<span class="percent">${successRate}</span>%
						<canvas width="46" height="46"></canvas>
					</div>
				</div>

				<div class="infobox-data">
					<span class="infobox-text">成功率</span>
					<div class="infobox-content">已完成 ${totalRunCount} 次</div>
				</div>
			</div>
		</div>
	</div>
	<div class="space-6"></div>
</div>
<div class="col-xs-9" style="margin-left:20px">
	<div class="table-responsive" style="width: 100%; min-height: 400px">
		<table class="table table-striped table-bordered table-hover" id="instanceListTable">
			<thead>
				<tr>
					<th>调度时间</th>
					<th>开始时间</th>
					<th>结束时间</th>
					<th>运行次数</th>
					<th>工作流</th>
					<th>状态</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody id="adList">
				#foreach($instance in $list)
				<tr>
					<td style="width: 180px">#if(!$instance.scheduleTime && !$instance.workflowInstanceId)
						<span class="label label-sm label-info">手动执行</span>
						#elseif ($instance.workflowInstanceId)
						<span class="label label-sm label-info">工作流触发</span>
						#else
						$!dateFormatUtils.format($instance.scheduleTime,'yyyy年MM月dd日HH时mm分') #end
					</td>
					<td style="width: 180px">$!dateFormatUtils.format($instance.startTime,'yyyy年MM月dd日HH时mm分')</td>
					<td style="width: 180px">#if($instance.status.isCompleted())
						$!dateFormatUtils.format($instance.endTime,'yyyy年MM月dd日HH时mm分') #end</td>
					<td style="width: 76px">$!instance.execTimes</td>
					<td style="width: 76px"><a href="/$workflowUrl$instance.workflowInstanceId">$!instance.workflowName</a></td>
					<td style="width: 70px">#if($instance.status.id==1) <span class="label label-sm">$instance.status.desc</span>
						#elseif($instance.status.id==10) <span class="label label-sm label-info">$instance.status.desc</span>
						#elseif($instance.status.id==20) <span class="label label-sm label-info arrowed-in">$instance.status.desc</span>
						#elseif($instance.status.id==30) <span class="label label-sm label-success">$instance.status.desc</span>
						#elseif($instance.status.id==40) <span class="label label-sm label-danger">$instance.status.desc</span>
						#elseif($instance.status.id==50) <span class="label label-sm label-danger">$instance.status.desc</span>
						#elseif($instance.status.id==60) <span class="label label-sm label-warning">$instance.status.desc</span>
						#elseif($instance.status.id==70) <span class="label label-sm label-warning">$instance.status.desc</span>
						#elseif($instance.status.id==80) <span class="label label-sm label-warning">$instance.status.desc</span>
						#end
					</td>
					<td style="width: 250px">
						#if(${instance.attempt.id})
						<a	href="javascript:app.openInstanceLogModal(${instance.attempt.id});">
						<span class="label">查看日志 </span></a>&nbsp;<a href="${rc.contextPath}/task/instance/attempt?instanceId=$instance.id"><span
							class="label label-info">运行情况 </span></a>
						#else <span class="
                        label label-info">
							尚未运行 </span>  
						#end &nbsp;
						#if(!$instance.workflowInstanceId && !$instance.status.isCompleted())<a
                        href="javascript:;" onclick="app.openCancelTaskModal($instance.id)"><span
                            class="label label-danger">终止执行</span></a>#end
                        #if(!$instance.workflowInstanceId && $instance.status.isCompleted())
                       	<a href="javascript:;" onclick="app.openRerunTaskModal($instance.id)"><span
                            class="label label-danger">重跑</span></a>
                        #end
					</td>
				</tr>
				#end
			</tbody>
		</table>
	</div>
	#screen("paginator.htm")
</div>
